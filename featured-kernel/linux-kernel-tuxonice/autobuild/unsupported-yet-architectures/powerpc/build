mkdir -p "$PKGDIR"/usr
mkdir -p "$PKGDIR"/boot

for i in uni smp; do
	make mrproper
	make clean

	OLDARCH=$ARCH
	unset ARCH
	cp -v autobuild/$OLDARCH/config-$i "$SRCDIR"/.config
	SRCARCH=powerpc

	. autobuild/build-common/set-var
	fakeroot="$SRCDIR/../$i"

	make
	make INSTALL_MOD_PATH="$fakeroot" modules_install

	cp -v vmlinux "$PKGDIR"/boot/vmlinux-aosc-main-${i}-${version}
	export ARCH=$OLDARCH

	cp -rv "$SRCDIR"/../"$i"/lib/ "$PKGDIR"/usr/

	headers_extra=-${i}
	. autobuild/build-common/ext-hdr
done

cp -rv "$SRCDIR"/../uni/lib/ "$PKGDIR"/usr/
cp -rv "$SRCDIR"/../smp/lib/ "$PKGDIR"/usr/
rm -rfv "$PKGDIR"/usr/lib/firmware

. autobuild/build-common/gen-scripts
