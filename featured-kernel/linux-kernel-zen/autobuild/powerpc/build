mkdir -p "$PKGDIR"/usr
mkdir -p "$PKGDIR"/boot

for i in uni smp; do
	make mrproper
	make clean

	OLDARCH=$ARCH
	unset ARCH
	cp -v autobuild/$OLDARCH/config-$i "$SRCDIR"/.config

	LOCALNAME=-aosc-zen-$i
	version=$PKGVER
	fakeroot="$SRCDIR/../$i"

	make
	make INSTALL_MOD_PATH="$fakeroot" modules_install

	cp -v vmlinux "$PKGDIR"/boot/vmlinux-aosc-zen-${i}-${version}
	export ARCH=$OLDARCH

	mkdir -p /usr/lib/modules/$version$LOCALNAME/kernel/drivers/net/wireless

	OLDARCH=$ARCH
	unset ARCH
	mkdir -p debian
	srctree=`pwd`
	objtree=`pwd`
	kernel_headers_dir="$PKGDIR"
	SRCARCH=x86
	(cd $srctree; find . -name Makefile\* -o -name Kconfig\* -o -name \*.pl > "$objtree/debian/hdrsrcfiles")
	(cd $srctree; find arch/$SRCARCH/include include scripts -type f >> "$objtree/debian/hdrsrcfiles")
	(cd $objtree; find arch/$SRCARCH/include .config Module.symvers include scripts -type f >> "$objtree/debian/hdrobjfiles")
	destdir=$kernel_headers_dir/usr/src/linux-headers-zen-${version}-${i}
	mkdir -p "$destdir"
	(cd $srctree; tar -c -f - -T "$objtree/debian/hdrsrcfiles") | (cd $destdir; tar -xf -)
	(cd $objtree; tar -c -f - -T "$objtree/debian/hdrobjfiles") | (cd $destdir; tar -xf -)
	rm -f "$objtree/debian/hdrsrcfiles" "$objtree/debian/hdrobjfiles"
	export ARCH=$OLDARCH
	
	rm -rf "$PKGDIR"/usr/src/linux-headers-zen-${version}-${i}/"$PKGDIR"
	rm -rf "$PKGDIR"/usr/lib/modules/${version}${LOCALNAME}/{build,source}
done

for i in uni smp; do
	LOCALNAME=-aosc-zen-$i
	version=$PKGVER
	ln -sfv /usr/src/linux-headers-zen-${version}-${i} "$PKGDIR"/usr/lib/modules/${version}${LOCALNAME}/build
	ln -sfv /usr/src/linux-headers-zen-${version}-${i} "$PKGDIR"/usr/lib/modules/${version}${LOCALNAME}/source
	cp -rv "$SRCDIR"/../"$i"/lib/ "$PKGDIR"/usr/
done

rm -rv "$PKGDIR"/usr/lib/firmware
