OLDARCH=$ARCH
unset ARCH
cp -v autobuild/$OLDARCH/config "$SRCDIR"/.config

LOCALNAME=-native
version=$PKGVER

make
make INSTALL_MOD_PATH="$PKGDIR" modules_install

mkdir -p "$PKGDIR"/boot 
cp arch/x86/boot/bzImage "$PKGDIR"/boot/vmlinuz$LOCALNAME-$version
export ARCH=$OLDARCH
rm -rf "$PKGDIR"/lib/firmware

mkdir -p /lib/modules/$version$LOCALNAME/kernel/drivers/net/wireless

OLDARCH=$ARCH
unset ARCH
mkdir -p debian
srctree=`pwd`
objtree=`pwd`
kernel_headers_dir="$PKGDIR"
SRCARCH=x86
(cd $srctree; find . -name Makefile\* -o -name Kconfig\* -o -name \*.pl > "$objtree/debian/hdrsrcfiles")
(cd $srctree; find arch/$SRCARCH/include include scripts -type f >> "$objtree/debian/hdrsrcfiles")
(cd $objtree; find arch/$SRCARCH/include .config Module.symvers include scripts -type f >> "$objtree/debian/hdrobjfiles")
destdir=$kernel_headers_dir/usr/src/linux-headers-$version
mkdir -p "$destdir"
(cd $srctree; tar -c -f - -T "$objtree/debian/hdrsrcfiles") | (cd $destdir; tar -xf -)
(cd $objtree; tar -c -f - -T "$objtree/debian/hdrobjfiles") | (cd $destdir; tar -xf -)
rm -f "$objtree/debian/hdrsrcfiles" "$objtree/debian/hdrobjfiles"
export ARCH=$OLDARCH
rm -fr "$PKGDIR"/usr/src/linux-headers-${version}${LOCALNAME}/"$PKGDIR"

rm -rf "$PKGDIR"/lib/modules/${version}${LOCALNAME}/{build,source}
ln -sfv /usr/src/linux-headers-${version}${LOCALNAME} "$PKGDIR"/lib/modules/${version}${LOCALNAME}/build
ln -sfv /usr/src/linux-headers-${version}${LOCALNAME} "$PKGDIR"/lib/modules/${version}${LOCALNAME}/source
